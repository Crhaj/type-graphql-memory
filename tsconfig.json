{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "lib": ["dom", "es6", "dom.iterable", "scripthost", "es2017", "esnext.asynciterable"],
        "sourceMap": true,
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": false,
        "removeComments": false,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
